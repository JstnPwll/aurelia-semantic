{
  "name": "aurelia-semantic",
  "version": "0.1.0",
  "description": "An Aurelia plugin providing Semantic UI features as custom elements",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/JstnPwll/aurelia-semantic"
  },
  "keywords": [
    "aurelia",
    "semantic",
    "semantic-ui",
    "ui",
    "plugin"
  ],
  "author": "Justin Powell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JstnPwll/aurelia-semantic/issues"
  },
  "homepage": "https://github.com/JstnPwll/aurelia-semantic#readme",
  "scripts": {
    "clean": "rimraf ./dist",
    "copy-html": "cpx \"src/**/*.html\" dist",
    "watch-html": "cpx \"src/**/*.html\" dist -w",
    "build-js:dev": "babel src --out-dir dist --source-maps inline",
    "build-js:prod": "babel src --out-dir dist",
    "build:dev": "set BABEL_ENV=development & npm run clean & npm run unbundle & npm run copy-html & npm run build-js:dev",
    "build:prod": "set BABEL_ENV=production & npm run clean & npm run copy-html & npm run build-js:prod & npm run bundle",
    "bundle": "node ./build/bundle",
    "unbundle": "jspm unbundle"
  },
  "babel": {
    "sourceMap": true,
    "sourceRoot": "",
    "moduleRoot": "src",
    "moduleIds": false,
    "comments": false,
    "compact": false,
    "code": true,
    "presets": [
      [
        "es2015",
        {
          "loose": true,
          "modules": "systemjs"
        }
      ],
      "stage-1"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "devDependencies": {
    "aurelia-bundler": "^0.4.0",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.18.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-1": "^6.16.0",
    "cpx": "^1.5.0",
    "http-server": "^0.9.0",
    "jspm": "^0.16.47",
    "node-sass": "^4.5.0",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.6.1"
  },
  "jspm": {
    "registry": "npm",
    "main": "main",
    "format": "amd",
    "directories": {
      "dist": "dist/amd"
    },
    "devDependencies": {
      "aurelia-polyfills": "^1.0.0-beta.1.1.0"
    }
  }
}
